{{> nav }}

<div class="main ui grid container" id="main-container">
    <div class="ui container sixteen wide column">
        <h1>Dasbor saya > Pasien saya</h1>
    </div>
    <div class="sixteen wide column">
        <table class="ui teal one column table" id="table">
            <thead>
                <tr class="sixteen wide column">
                    <th class="two wide column">Gambar</th>
                    <th class="four wide column">Nama</th>
                    <th class="two wide column">Jenis kelamin</th>
                    <th class="four wide column">Pemberi</th>
                    <th class="four wide column">Next Appt</th>
                </tr>
            </thead>
            <tbody>
                {{#each patient}}
                <tr class="sixteen wide column">
                    <td class="two wide column"><img class="ui avatar image" src="../assets/images/circle-image.png"></td>
                    <td class="four wide column">{{this.first_name}} {{this.last_name}}</td>
                    <td class="two wide column">M</td>
                    <td class="four wide column">{{this.provider_name}}</td>
                    <td class="four wide column">{{this.appointments}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>