{{> nav}}

<div class="main ui grid container">

    <div class="ui container sixteen wide column">
        <h1>Tambahkan Spesialis Baru</h1>
    </div>

    <div class="sixteen wide column">
        <form class="ui form" action="/specialists/add" method="post">
            <div class="field">
                <div class="fields">
                    <div class="eight wide field">
                        <label>Nama depan</label>
                        <input type="text" name="firstName" placeholder="Nama depan" required>
                    </div>
                    <div class="eight wide field">
                        <label>Nama belakang</label>
                        <input type="text" name="lastName" placeholder="Nama belakang" required>
                    </div>
                </div>
            </div>
            <div class="field">
                <div class="fields">
                    <div class="eight wide field">
                        <label>Alamat jalan</label>
                        <input type="text" name="streetAddress" required>
                    </div>
                    <div class="eight wide field">
                        <label>Kota</label>
                        <input type="text" name="city" required>
                    </div>
                </div>
            </div>
            <div class="field">
                <div class="fields">
                    <div class="four wide field">
                        <label>Negara</label>
                        <select class="ui fluid dropdown" name="state" id="state" required>
                            <option value="">Pilih Negara</option>
                            <option value="BD">Brunei Darussalam</option>
                            <option value="FA">Filipina</option>
                            <option value="ID">Indonesia</option>
                            <option value="LA">Laos</option>
                            <option value="KA">Kamboja</option>
                            <option value="ML">Malaysia</option>
                            <option value="MY">Myanmar</option>
                            <option value="SA">Singapura</option>
                        </select>
                    </div>
                    <div class="five wide field">
                        <label>Zip Code</label>
                        <input type="text" pattern="[0-9]{5}" name="zip" placeholder="Zip" required>
                    </div>
                    <div class="five wide field">
                        <label>Nomor telepon</label>
                        <input type="text" name="telephone" required>
                    </div>
                </div>
            </div>
            <div class="field">
                <div class="fields">
                    <div class="eight wide field">
                        <label>Tautan Gambar Profil</label>
                        <input type="text" name="image" required>
                    </div>
                </div>
            </div>
            <div>
                <button type="submit" class="ui blue basic button" id="add-patient-button"><i class="add user icon"></i>Tambahkan Spesialis</button>
                <button class="ui grey basic button" id="autofill">Isi Otomatis</button>
            </div>
    </div>
    </form>
</div>